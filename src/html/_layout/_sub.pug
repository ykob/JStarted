mixin linkListItem(label, href, target)
  .c-link-list__item
    a.c-link-list__item-wrap(
      href = href,
      target = (target) ? target : ''
    )
      .c-link-list__item-label #{label} 
        if (target == '_blank')
          +iconExternal(18)

